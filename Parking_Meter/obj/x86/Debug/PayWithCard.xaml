<Page
    x:Class="Parking_Meter.PayWithCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Parking_Meter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:ConnectionId='1' x:Name="image" 
               HorizontalAlignment="Left"
               Source="/Assets/pay_with_card-22.png" 
               RenderTransformOrigin="0,0" Margin="0,0,0,0" Height="auto" Width="auto" VerticalAlignment="Top"  />
        <Button x:ConnectionId='2' x:Name="back" Content="" 
                HorizontalAlignment="Left"  VerticalAlignment="Bottom" 
                Height="80" Width="250" 
                Opacity="1" 
                              />
        <Button x:ConnectionId='3' x:Name="help" Content="" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Height="80" Width="200" 
                Opacity="1" 
                              />

        <Button x:ConnectionId='4' x:Name="proceed" Content="" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                Height="70" Width="160" 
                Margin="-820,230,-900,0"
                Opacity="1" 
                               >
            <FlyoutBase.AttachedFlyout>
                <Flyout>
                    <Grid Height="600" Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Please Enter PIN" Grid.ColumnSpan="3" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <Button x:ConnectionId='19' x:Name="PinOne" Grid.Column="0" Grid.Row="1" Height="100" Width="100" Content="1" FontSize="48"            />
                        <Button x:ConnectionId='20' x:Name="PinTwo" Grid.Column="1" Grid.Row="1" Height="100" Width="100" Content="2" FontSize="48"            />
                        <Button x:ConnectionId='21' x:Name="PinThree" Grid.Column="2" Grid.Row="1" Height="100" Width="100" Content="3" FontSize="48"              />

                        <Button x:ConnectionId='22' x:Name="PinFour" Grid.Column="0" Grid.Row="2" Height="100" Width="100" Content="4" FontSize="48"             />
                        <Button x:ConnectionId='23' x:Name="PinFive" Grid.Column="1" Grid.Row="2" Height="100" Width="100" Content="5" FontSize="48"             />
                        <Button x:ConnectionId='24' x:Name="PinSix" Grid.Column="2" Grid.Row="2" Height="100" Width="100" Content="6" FontSize="48"            />

                        <Button x:ConnectionId='25' x:Name="PinSeven" Grid.Column="0" Grid.Row="3" Height="100" Width="100" Content="7" FontSize="48"              />
                        <Button x:ConnectionId='26' x:Name="PinEight" Grid.Column="1" Grid.Row="3" Height="100" Width="100" Content="8" FontSize="48"              />
                        <Button x:ConnectionId='27' x:Name="PinNine" Grid.Column="2" Grid.Row="3" Height="100" Width="100" Content="9" FontSize="48"             />

                        <Button x:ConnectionId='28' x:Name="Zero" Grid.Column="0" Grid.Row="4" Height="100" Width="100" Content="0" FontSize="48"             />
                        <Button x:ConnectionId='29' x:Name="BackDelete" Grid.Column="1" Grid.Row="4" Height="100" Width="100" Content="Delete" FontSize="25"               />
                        <Button x:ConnectionId='30' x:Name="Accept" Grid.Column="2" Grid.Row="4" Height="100" Width="100" Content="Enter" FontSize="30"              />

                        <TextBlock x:ConnectionId='31' x:Name="PinText" Text="" Grid.Row="5" Grid.ColumnSpan="3" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Flyout>
            </FlyoutBase.AttachedFlyout>
        </Button>

        <Button x:ConnectionId='5' x:Name="b0" Content="" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                Height="55" Width="70" 
                Margin="185,-90,610,-330"
                Opacity="1" 
                              />
        <Button x:ConnectionId='6' x:Name="b1" Content="" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                Height="55" Width="70" 
                Margin="275,80,915,300"
                Opacity="1" 
                              />
        <Button x:ConnectionId='7' x:Name="b2" Content="" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                Height="55" Width="70" 
                Margin="190,80,615,300"
                Opacity="1" 
                              />
        <Button x:ConnectionId='8' x:Name="b3" Content="" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                Height="55" Width="70" 
                Margin="100,80,315,300"
                Opacity="1" 
                              />
        <Button x:ConnectionId='9' x:Name="b4" Content="" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                Height="55" Width="70" 
                Margin="275,230,915,300"
                Opacity="1" 
                              />
        <Button x:ConnectionId='10' x:Name="b5" Content="" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                Height="55" Width="70" 
                Margin="190,230,615,300"
                Opacity="1" 
                              />
        <Button x:ConnectionId='11' x:Name="b6" Content="" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                Height="55" Width="70" 
                Margin="100,230,315,300"
                Opacity="1" 
                              />
        <Button x:ConnectionId='12' x:Name="b7" Content="" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                Height="55" Width="70" 
                Margin="275,290,915,200"
                Opacity="1" 
                              />
        <Button x:ConnectionId='13' x:Name="b8" Content="" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                Height="55" Width="70" 
                Margin="190,290,615,200"
                Opacity="1" 
                              />
        <Button x:ConnectionId='14' x:Name="b9" Content="" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                Height="55" Width="70" 
                Margin="100,290,315,200"
                Opacity="1" 
                              />
        <TextBlock x:ConnectionId='15' x:Name="NumberBox" 
                   HorizontalAlignment="Left" 
                   Margin="300,540,0,0" 
                   TextWrapping="Wrap" Text="" 
                   VerticalAlignment="Top" 
                   Height="107" Width="708" 
                   FontSize="40"/>
        <TextBlock x:ConnectionId='16' x:Name="AmounttoPay" HorizontalAlignment="Left" Margin="870,329,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="107" Width="708" FontSize="60" Foreground="White"/>
        <Button x:ConnectionId='17' x:Name="RemoveChar" 
                HorizontalAlignment="Center" 
                Margin="105,440,315,200"
                 
                Width="70" Height="55" 
                                      />

        <Button x:ConnectionId='18' HorizontalAlignment="Left" Height="50" Margin="80,370,0,0" VerticalAlignment="Top" Width="50"
               
                                              >
            <FlyoutBase.AttachedFlyout>
                <Flyout>
                    <StackPanel>
                        
                    </StackPanel>
                </Flyout>
            </FlyoutBase.AttachedFlyout>
        </Button>
    </Grid>
</Page>

