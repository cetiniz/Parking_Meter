<Page
    x:Class="Parking_Meter.PayCashPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Parking_Meter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>

    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:ConnectionId='1' x:Name="image" 
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Height="auto"  Width="auto" 
               Source="Assets/PayCashPage.png">
        </Image>

        <Button x:ConnectionId='2' x:Name="cancel" Content="" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                Height="80" Width="220" 
                Margin="0,0,0,0"
                Opacity="1" 
                               />
        <Button x:ConnectionId='3' x:Name="help" Content="" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Height="80" Width="200" 
                Opacity="1" 
                              />

        <TextBlock x:ConnectionId='4' x:Name="paidBox"
                   Width="500" Height="100"
                   Foreground="White" FontFamily="Segoe UI Light" FontSize="60"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="380,239,0,0" TextWrapping="Wrap"/>

        <TextBlock x:ConnectionId='5' x:Name="topayBox"
                   Width="500" Height="80"
                   Foreground="White" FontFamily="Segoe UI Light" FontSize="60"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="368,365,0,0" TextWrapping="Wrap" />

        <Button x:ConnectionId='6' x:Name="proceed" Content="" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                Height="90" Width="250" 
                Margin="0,0,-900,0"
                Opacity="1" 
                                        />
        <Button x:ConnectionId='7' x:Name="GoBack" Content="" HorizontalAlignment="Left" 
                Margin="5,630,0,0" 
                VerticalAlignment="Top" Width="250" Height="90"                     />
        <Image x:ConnectionId='8' HorizontalAlignment="Left" Height="35" Margin="240,300,-800,0" VerticalAlignment="Top" Width="160"
               Source="Assets/StoreLogo.png"
                                    >
            <FlyoutBase.AttachedFlyout>
                <Flyout>
                    <StackPanel>
                        <Button x:ConnectionId='15' x:Name="Nickel" Content="5₵ "                />
                        <Button x:ConnectionId='16' x:Name="Dime" Content="10₵"              />
                        <Button x:ConnectionId='17' x:Name="Quarter" Content="25₵"                 />
                        <Button x:ConnectionId='18' x:Name="Loonie" Content="$1"                />
                        <Button x:ConnectionId='19' x:Name="Toonie" Content="$2"                />
                    </StackPanel>
                </Flyout>
            </FlyoutBase.AttachedFlyout>
        </Image>
        <Image x:ConnectionId='9' HorizontalAlignment="Left" Height="55" Margin="200,350,-800,0" VerticalAlignment="Top" Width="160"
               Source="Assets/StoreLogo.png"
                                           >
                <FlyoutBase.AttachedFlyout>
                    <Flyout>
                        <StackPanel>
                            <Button x:ConnectionId='10' x:Name="bill5" Content="$5"              />
                            <Button x:ConnectionId='11' x:Name="bill10" Content="$10"               />
                            <Button x:ConnectionId='12' x:Name="bill20" Content="$20"               />
                            <Button x:ConnectionId='13' x:Name="bill50" Content="$50"               />
                            <Button x:ConnectionId='14' x:Name="bill100" Content="$100"                />
                        </StackPanel>
                    </Flyout>
                </FlyoutBase.AttachedFlyout>
            </Image>


    </Grid>
</Page>

