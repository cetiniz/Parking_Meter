<Page
    x:Class="Parking_Meter.AddTimetoTicket"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Parking_Meter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:ConnectionId='1' x:Name="image" 
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Height="auto"  Width="auto" 
               Source="Assets/add_time_to_ticket-23.png"/>

        <Button x:ConnectionId='2' x:Name="back" Content="" 
                HorizontalAlignment="Left"  VerticalAlignment="Bottom" 
                Height="80" Width="250" 
                Opacity="1" 
                              />
        <Button x:ConnectionId='3' x:Name="cancel" Content="" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                Height="80" Width="220" 
                Opacity="1" 
                               />
        <Button x:ConnectionId='4' x:Name="help" Content="" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Height="80" Width="200" 
                Opacity="1" 
                              />


        <Button x:ConnectionId='5' x:Name="hoursInc" Content="" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                Height="70" Width="100"
                Margin="-100,-100,610,240"
                Opacity="1" 
                            />
        <Button x:ConnectionId='6' x:Name="hoursDec" Content="" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Height="70" Width="100" 
                Margin="-90,-100,610,-150"
                Opacity="1" 
                            />
        <Button x:ConnectionId='7' x:Name="minInc" Content="" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Height="70" Width="100" 
                Margin="-100,-100,-850,240"
                Opacity="1" 
                            />
        <Button x:ConnectionId='8' x:Name="minDec" Content="" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Height="70" Width="100"
                Margin="-100,-100,-850,-150"
                Opacity="1" 
                            />

        <Button x:ConnectionId='9' x:Name="proceed" Content="" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Height="108" Width="355"
                Margin="35,-105,-680,-440"
                Opacity="1" 
                                       />


        <TextBlock x:ConnectionId='10' x:Name="hoursBox"
                   Width="100" Height="60"
                   Foreground="White" FontFamily="Segoe UI Light" FontSize="60"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="255,255,0,0" TextWrapping="Wrap"/>

        <TextBlock x:ConnectionId='11' x:Name="minutesBox"
                   Width="100" Height="60"
                   Foreground="White" FontFamily="Segoe UI Light" FontSize="60"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="985,255,0,0" TextWrapping="Wrap" />

        <TextBlock x:ConnectionId='12' x:Name="priceBox"
                   Width="300" Height="80"
                   Foreground="Black" FontFamily="Segoe UI Light" FontSize="50"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="240,550,0,0" TextWrapping="Wrap" />
    </Grid>
</Page>

