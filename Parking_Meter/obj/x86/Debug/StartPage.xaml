<Page
    x:Class="Parking_Meter.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Parking_Meter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="Auto" Height="Auto">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,0,0">

        <Image x:ConnectionId='1' x:Name="image" 
               HorizontalAlignment="Left"
               Source="/Assets/StartPage.png" 
               RenderTransformOrigin="0,0" Margin="0,0,0,0" Height="auto" Width="auto" VerticalAlignment="Top"  />

        <Button x:ConnectionId='2' x:Name="screen"
                HorizontalAlignment="center" VerticalAlignment="Center"  
                Height="1080" Width="1920" 
                               RenderTransformOrigin="0.505,0.496"/>
        <Button x:ConnectionId='3' x:Name="lang"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Height="85" Width="245"/>
        <TextBlock x:ConnectionId='4' x:Name="test" HorizontalAlignment="Left" Margin="100,50,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Page>

