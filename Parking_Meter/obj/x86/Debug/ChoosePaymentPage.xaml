<Page
    x:Class="Parking_Meter.ChoosePaymentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Parking_Meter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:ConnectionId='1' x:Name="image" 
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Height="auto"  Width="auto" 
               Source="Assets/ChoosePaymentPage.png"/>
        <Button x:ConnectionId='2' x:Name="back" Content="" 
                HorizontalAlignment="Left"  VerticalAlignment="Bottom" 
                Height="80" Width="250" 
                Opacity="1" 
                              />
        <Button x:ConnectionId='3' x:Name="cancel" Content="" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                Height="80" Width="220" 
                Opacity="1" 
                               />
        <Button x:ConnectionId='4' x:Name="help" Content="" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Height="80" Width="200" 
                Opacity="1" 
                              />

        <Button x:ConnectionId='5' x:Name="purchase" Content="" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                Height="100" Width="500" 
                Margin="-100,-100,-70,130"
                Opacity="1" 
                              />
        <Button x:ConnectionId='6' x:Name="add" Content="" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Height="100" Width="500" 
                Margin="-100,-100,-70,-160"
                Opacity="1" 
                                     />
        <Button x:ConnectionId='7' x:Name="refund" Content="" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Height="100" Width="500" 
                Margin="-100,-100,-70,-460"
                Opacity="1" 
                                 />

        <TextBlock x:ConnectionId='8' x:Name="feedback"
                   Width="1600" Height="100"
                   Foreground="#58585B" FontFamily="Segoe UI Light" FontSize="40"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="200,30,100,0"
                   TextWrapping="Wrap" />
    </Grid>
</Page>

